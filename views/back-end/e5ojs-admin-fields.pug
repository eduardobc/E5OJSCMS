- }
- function set_meta_imagetext(meta_data) {
    div(class="input-field post-meta-imagetext")
        div(class="imagetext-wrapper margin-top-field")
            - var image_id = "";
            - if( meta_data.post_meta_value != "" )
                - image_id = JSON.parse(meta_data.post_meta_value).image_id;
            img(class="e5ojs-open-media-imagetext-meta e5ojs-get-ajax-image" src=e5ojs_global_data.admin_res.media_default_image_gallery media-id=image_id update_media_id="0" post-meta-value-id="meta_"+meta_data.meta_name post-meta-value-type="json")
            input(id="meta_"+meta_data.meta_name class="meta-image-id" type="hidden" name="meta_"+meta_data.meta_name value=meta_data.post_meta_value)
            input(class="meta-imagetext" type="hidden" value="")
            a(class="waves-effect waves-light btn modal-trigger imagetext-modal-btn" href="#modal1")="Text"
                i(class="material-icons")="short_text"
        label(for="meta_"+meta_data.meta_name)=meta_data.meta_title
- }
