- }
- function set_meta_gallery(meta_data) {
    div(class="input-field post-meta-image")
        div(class="post-meta-gallery margin-top-field")
            input(type="hidden" class="default-gallery-image-data" post-meta-image-url=e5ojs_global_data.admin_res.media_default_image_gallery post-meta-value-id="meta_"+meta_data.meta_name)
            a(class="btn-floating btn-large waves-effect waves-dark post-meta-gallery-add-new")
                i(class="material-icons")='add'
            - if( meta_data.post_meta_value == "" )
                div(class="image-ajax-load-wrapper")
                    img(class="e5ojs-open-media-meta" src=e5ojs_global_data.admin_res.media_default_image_gallery update_media_id="0" post-meta-value-id="meta_"+meta_data.meta_name post-meta-value-type="json")
        input(id="meta_"+meta_data.meta_name class="meta-image-id" type="hidden" name="meta_"+meta_data.meta_name value=meta_data.post_meta_value)
        label(for="meta_"+meta_data.meta_name)=meta_data.meta_title
- }
- function set_meta_map(meta_key,meta_data) {
    div(class="input-map post-meta-map")
        input(id="meta_"+meta_data.meta_name type="hidden" class="map-data" data-meta-key-map=meta_key name="meta_"+meta_data.meta_name value=meta_data.post_meta_value)
