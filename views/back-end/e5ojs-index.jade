extends e5ojs-base-layout
block e5ojs_block_local_css_script
block e5ojs_block_content
        div(class="e5ojs-top-bar")
            div(class="container")
                    div(class="col-xs-12")
                        h1= title
        div(class="container e5ojs-login-wrapper")            
            div(class="row")
                div(class="col-xs-12 col-md-4")
                div(class="col-xs-12 col-md-4")
                    form(action="/admin/" method="post" class="e5ojs-form-login")
                        if result_request == 0
                            p(class='login-error-message')='Access Error'
                        div(class="input-field ")
                            input(id="user_name" class="validate", type="text", name="user_name")
                            label(for='user_name') User name
                        div(class="input-field ")
                            input(id="user_pass" class="validate", type="password", name="user_pass")
                            label(for='user_pass') User password
                        button(class="btn waves-effect waves-light", type="submit", name="action")='LOGIN'
                div(class="col-xs-12 col-md-4")
                    
                    
                    
